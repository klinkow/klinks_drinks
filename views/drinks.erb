<h1>Here are the available drinks:</h1>
<% @drinks.each() do |drink| %>
  <div class="col s12 m7">
    <h2 class="header"><%= drink.name() %></h2>
    <div class="card horizontal">
      <div class="card-image">
        <img src="http://lorempixel.com/100/190/nature/6">
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <h5>Description:</h5>
          <p><%= drink.description() %></p>
          <br>
          <h5>Preparations:</h5>
          <p><%= drink.instructions() %></p>
        </div>
        <div class="card-action">
          <a href="/drinks/:id/">Edit Drink</a>
        </div>
      </div>
    </div>
  </div>
<% end %>


<h1>Add a new drink:</h1>
<div class="row">
    <form class="col s12" action="/drinks/:id" method="post">
      <div class="row">
        <div class="input-field col s6">
          <input name="new_drink_name" id="new_drink_name" type="text" class="validate">
          <label for="new_drink_name">Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input name="new_drink_description" id="new_drink_description" type="text" class="validate">
          <label for="new_drink_description">Description</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input name="new_drink_instructions" id="new_drink_instructions" type="text" class="validate">
          <label for="new_drink_instructions">Preparation</label>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">library_add</i>
      </button>
    </form>
  </div>
